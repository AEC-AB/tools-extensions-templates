<!-- 
    AboutView.xaml - About page view for the RevitAppExtension application.
    
    This view demonstrates:
    1. A simple view that doesn't require Revit API interaction
    2. Command binding to a non-Revit-dependent action using the Do() pattern
    3. Minimal UI implementation for information display
    
    Unlike HomeView which uses complex Revit API operations, this view shows
    how to implement simpler functionality like opening external resources.
    It serves as an example of a view that doesn't need to modify the Revit model.
-->
<UserControl x:Class="RevitAppExtension.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:resources="clr-namespace:RevitAppFramework.Resources" 
             resources:ResourceInjectionBehavior.InjectResources="True"
             xmlns:viewmodels="clr-namespace:RevitAppExtension.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             d:DataContext="{d:DesignInstance viewmodels:AboutViewModel}">    
    <Grid>
        <!-- Wiki Button -->
        <!-- Demonstrates binding to a command that performs a non-Revit operation (opening a URL) -->
        <!-- This uses the simpler Do() command pattern rather than the Send() pattern used for Revit operations -->
        <ui:Button Content="Tools by AEC Wiki" Icon="{ui:SymbolIcon Link16}" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Command="{Binding ShowWikiCommand}"/>
    </Grid>
</UserControl>
