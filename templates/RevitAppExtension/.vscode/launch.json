{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Revit",
      "type": "clr",
      "request": "attach",
      "processName": "Revit"
    },
    {
      "name": "Attach Process Id",
      "type": "clr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Launch In Design Mode",
      "preLaunchTask": "build (Design)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Design/RevitAppExtension.exe",
      "args": [ "-c", "Design" ],
      "stopAtEntry": false
    },
    {
      "name": "Launch In Design Mode 2024 (net48)",
      "preLaunchTask": "build (Design 2024)",
      "type": "clr",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Design/RevitAppExtension.exe",
      "args": [ "-c", "Design 2024" ],
      "stopAtEntry": false
    }
  ]
}