{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tekla 2020",
            "command": "dotnet",
            "args": [
                "publish",
                "-c",
                "Debug 2020"
            ],
            "group": "build"
        },
        {
            "label": "Tekla 2021",
            "command": "dotnet",
            "args": [
                "publish",
                "-c",
                "Debug 2021"
            ],
            "group": "build"
        },
        {
            "label": "Tekla 2022",
            "command": "dotnet",
            "args": [
                "publish",
                "-c",
                "Debug 2022"
            ],
            "group": "build"
        },
        {
            "label": "Tekla 2023",
            "command": "dotnet",
            "args": [
                "publish",
                "-c",
                "Debug 2023"
            ],
            "group": "build"
        },
        {
      "label": "build (Design)",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/TeklaAppExtension.csproj",
        "--configuration",
        "Design"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
    ]
}