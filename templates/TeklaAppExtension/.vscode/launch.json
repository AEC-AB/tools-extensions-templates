{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Tekla",
            "type": "clr",
            "request": "attach",
            "processName": "TeklaStructures"
        },
        {
            "name": "Attach Process Id",
            "type": "clr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Launch In Design Mode",
            "preLaunchTask": "build (Design)",
            "type": "clr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Design/TeklaAppExtension.exe",
            "args": [
                "-c",
                "Design"
            ],
            "stopAtEntry": false
        }
    ]
}